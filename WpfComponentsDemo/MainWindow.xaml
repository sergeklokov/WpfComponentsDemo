<Window x:Class="WpfComponentsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lib="clr-namespace:WpfComponentsLibrary;assembly=WpfComponentsLibrary"
        xmlns:local="clr-namespace:WpfComponentsDemo"
        mc:Ignorable="d"
        Title="WPF Components Demo" Height="450" Width="800">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" >

        <!-- FancyLabel Usage -->
        <lib:FancyLabel Text="This is a Fancy Label!" 
                        Margin="0,0,0,10" />

        <!-- SimpleButton Usage -->
        <lib:SimpleButton ButtonText="Click this Simple Button!"
                          Margin="0,0,0,10" />

        <!-- Optional: SimpleButton with Icon -->
        <lib:SimpleButton ButtonText="Save with Icon">
            <lib:SimpleButton.Icon>
                <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12M4.25,5.61L7.75,9.11L17.91,19.27L21.41,15.77L11.25,5.61M19,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3Z"
                      Fill="White" Width="16" Height="16" Margin="0,0,8,0"/>
            </lib:SimpleButton.Icon>
        </lib:SimpleButton>

    </StackPanel>
</Window>
