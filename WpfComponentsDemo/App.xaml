<Application x:Class="WpfComponentsDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfComponentsDemo"
             xmlns:lib="clr-namespace:WpfComponentsLibrary;assembly=WpfComponentsLibrary"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Global Style for FancyLabel (applies to all instances) -->
        <Style TargetType="{x:Type lib:FancyLabel}">
            <Setter Property="Background" Value="LightBlue" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type lib:FancyLabel}">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="5"
                                BorderBrush="Gray"
                                BorderThickness="1">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
